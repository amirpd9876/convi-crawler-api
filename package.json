{
  "name": "convi-crawler",
  "version": "1.0.0",
  "description": "Web crawler API for Shopify stores with screenshot capabilities",
  "main": "dist/src/api-server.js",
  "scripts": {
    "dev:api": "node dist/src/api-server.js",
    "start:api": "node dist/src/api-server.js",
    "build": "tsc",
    "postinstall": "npx playwright install chromium",
    "vercel-build": "npm run build",
    "start": "npm run build && npx playwright install chromium && node dist/src/api-server.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "playwright": "^1.40.1",
    "playwright-core": "^1.40.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@vercel/node": "^5.3.17",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
