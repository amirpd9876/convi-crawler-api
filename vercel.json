{
  "version": 2,
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/crawl",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/crawl-batch",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "IMGBB_API_KEY": "9c4c485b1b1a33b4fff5eabe1cfc64e0",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.ts": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "regions": ["iad1"]
}
